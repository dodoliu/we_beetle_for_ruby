<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|  %>
  <section class="loginBox row-fluid">
      <section class="span7 left">
        <h2>用户登录</h2>
        <p><%= f.email_field :email, autofocus: true, placeholder: "用户名" %></p>
        <p><%= f.password_field :password, autocomplete: "off", placeholder: "密码" %></p>
        <section class="row-fluid">
          <section class="span8 lh30">

            <label>
              <!-- <input type="checkbox" name="rememberme" />下次自动登录 -->
              <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>下次自动登陆
              
              <% end %>
            </label>
          </section>
          <section class="span1">
            <%= f.submit "登陆", class: "btn btn-primary" %>
          </section>
        </section>
      </section>
      <section class="span5 right">
        <h2>甲壳虫设计欢迎您</h2>
        <section>
          <p>使用Chrome浏览器可以获得更好的用户体验...</p>
          
          <!-- <p><input type="button" value=" 注册 " class="btn regBtn"></p> -->
        </section>
      </section>
  </section>
<% end %>

