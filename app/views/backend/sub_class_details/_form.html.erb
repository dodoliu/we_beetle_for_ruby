<div class="row-fluid">
	<!-- block -->
	<div class="block">
		<div class="navbar navbar-inner block-header">
			<div class="muted pull-left">子分类明细</div>
		</div>
		<div class="block-content collapse in">
			<div class="span12">
				<%= form_for [:backend,@sub_class_detail], html: { class: 'form-horizontal' } do |f| %>
				<fieldset>
					
					<div class="control-group">
						<%= f.error_messages %>
					</div>
					<div class="control-group">
						<label class="control-label" for="typeahead">所属子分类</label>
						<div class="controls">
							<%=  f.select :sub_class_id, @sub_classes.collect { |m| [m.name,m.id] }, include_blank: '--请选择--' %>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="typeahead">子分类明细名称</label>
						<div class="controls">
							<%= f.text_field :name %>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="typeahead">链接地址</label>
						<div class="controls">
							<%= f.text_field :url %>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="fileInput">展示图片</label>
						<div class="controls">
							<%= f.file_field :pic_url, class: 'input-file uniform_on' %>
							<% if @sub_class_detail.pic_url.present? %>
							<%= link_to '点击查看图片效果', @sub_class_detail.pic_url.url, target: '_blank' %>
							<% end %>
							图片将被上传至七牛服务器
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">备注</label>
						<div class="controls">
							<%= f.text_area :desc, class: 'input-xlarge textarea', placeholder: '描述', style: 'width: 810px; height: 200px' %>
						</div>
					</div>
					<div class="form-actions">
						<%= f.submit '提交', class: 'btn' %>
						<%= link_to '返回', backend_sub_class_details_path, class: 'btn' %>
					</div>
				</fieldset>
				<% end %>
			</div>
		</div>
	</div>
	<!-- /block -->
</div>
<script type="text/javascript">
	$(function(){
		setTimeout(function(){
$(".uniform_on").uniform();
},1000);
	});
</script>